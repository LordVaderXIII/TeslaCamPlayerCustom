@using TeslaCamPlayer.BlazorHosted.Shared.Models

@if (Data != null)
{
    <div class="telemetry-overlay">
        <!-- Dashboard Container -->
        <div class="dashboard-strip">

            <!-- Left Signal -->
            <div class="signal-indicator @(Data.BlinkerOnLeft ? "active" : "")">
                <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Large" />
            </div>

            <!-- Steering Wheel -->
            <div class="steering-wheel-container">
                <!-- Using SVG for steering wheel as it rotates better and looks specific -->
                <svg viewBox="0 0 24 24" class="steering-wheel" style="@($"transform: rotate({Data.SteeringWheelAngle}deg);")">
                     <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none" />
                     <path d="M12 2 L12 12 M4 16 L12 12 L20 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </div>

            <!-- Center Info: Speed, Gear, AP -->
            <div class="center-cluster">
                <div class="gear-strip">
                    <span class="@(Data.Gear == GearState.Park ? "selected" : "")">P</span>
                    <span class="@(Data.Gear == GearState.Reverse ? "selected" : "")">R</span>
                    <span class="@(Data.Gear == GearState.Neutral ? "selected" : "")">N</span>
                    <span class="@(Data.Gear == GearState.Drive ? "selected" : "")">D</span>
                </div>

                <div class="speed-readout">
                    <span class="value">@Math.Round(Data.SpeedKmph)</span>
                    <span class="unit">KM/H</span>
                </div>

                <div class="autopilot-indicator" style="color: @GetAutopilotColorHex(Data.AutopilotState)">
                    <MudIcon Icon="@Icons.Material.Filled.DirectionsCar" Size="Size.Small" />
                    <span class="label">@GetAutopilotLabel(Data.AutopilotState)</span>
                </div>
            </div>

            <!-- Pedals -->
            <div class="pedals-cluster">
                <div class="pedal brake @(Data.BrakeApplied ? "active" : "")">
                    <span class="pedal-icon">BRAKE</span>
                </div>
                <div class="pedal accel">
                     <div class="accel-bar">
                         <div class="accel-fill" style="width: @(Math.Min(Data.AcceleratorPedalPosition, 100))%"></div>
                     </div>
                     <span class="pedal-label">ACCEL</span>
                </div>
            </div>

            <!-- Right Signal -->
            <div class="signal-indicator @(Data.BlinkerOnRight ? "active" : "")">
                <MudIcon Icon="@Icons.Material.Filled.ArrowForward" Size="Size.Large" />
            </div>

        </div>
    </div>

    <style>
        .telemetry-overlay {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            width: auto;
            min-width: 600px;
            max-width: 90%;
            z-index: 2000;
            pointer-events: none;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        }

        .dashboard-strip {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: rgba(0, 0, 0, 0.75);
            backdrop-filter: blur(8px);
            border-radius: 50px;
            padding: 10px 40px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.5);
            color: #fff;
            gap: 20px;
        }

        /* Signals */
        .signal-indicator {
            color: #555;
            transition: color 0.2s;
            display: flex;
            align-items: center;
        }
        .signal-indicator.active {
            color: #00e676;
            animation: blink 0.5s infinite alternate;
        }
        @@keyframes blink { from { opacity: 1; } to { opacity: 0.3; } }

        /* Steering */
        .steering-wheel-container {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .steering-wheel {
            width: 100%;
            height: 100%;
            color: #ccc;
            transition: transform 0.1s linear;
        }

        /* Center Cluster */
        .center-cluster {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-width: 120px;
        }

        .gear-strip {
            display: flex;
            gap: 10px;
            font-size: 0.9rem;
            color: #777;
            font-weight: bold;
            margin-bottom: 2px;
        }
        .gear-strip span.selected {
            color: #fff;
            text-shadow: 0 0 5px rgba(255,255,255,0.5);
        }

        .speed-readout {
            display: flex;
            align-items: baseline;
            gap: 5px;
            line-height: 1;
        }
        .speed-readout .value {
            font-size: 2.2rem;
            font-weight: 300;
        }
        .speed-readout .unit {
            font-size: 0.7rem;
            font-weight: bold;
            color: #aaa;
        }

        .autopilot-indicator {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 0.75rem;
            font-weight: bold;
            margin-top: 2px;
            color: #757575;
        }

        /* Pedals */
        .pedals-cluster {
            display: flex;
            flex-direction: column;
            gap: 5px;
            width: 80px;
        }

        .pedal.brake {
            font-size: 0.7rem;
            font-weight: bold;
            color: #555;
            background: rgba(255, 82, 82, 0.1);
            border: 1px solid #555;
            border-radius: 4px;
            text-align: center;
            padding: 2px;
            transition: all 0.1s;
        }
        .pedal.brake.active {
            background: #d32f2f;
            color: white;
            border-color: #d32f2f;
            box-shadow: 0 0 8px #d32f2f;
        }

        .pedal.accel {
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .accel-bar {
            flex-grow: 1;
            height: 6px;
            background: #333;
            border-radius: 3px;
            overflow: hidden;
        }
        .accel-fill {
            height: 100%;
            background: white;
            transition: width 0.1s linear;
        }
        .pedal-label {
            font-size: 0.6rem;
            color: #aaa;
        }

    </style>
}

@code {
    [Parameter] public TelemetryData Data { get; set; }

    private string GetAutopilotColorHex(AutopilotState state)
    {
        return state switch
        {
            AutopilotState.SelfDriving => "#29b6f6", // Light Blue
            AutopilotState.Autosteer => "#29b6f6",
            AutopilotState.Tacc => "#42a5f5", // Blue
            _ => "#757575" // Grey
        };
    }

    private string GetAutopilotLabel(AutopilotState state)
    {
        return state switch
        {
            AutopilotState.SelfDriving => "FSD",
            AutopilotState.Autosteer => "AUTOSTEER",
            AutopilotState.Tacc => "TACC",
            _ => "MANUAL"
        };
    }
}
